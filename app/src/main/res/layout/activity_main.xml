<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#2b2b2b"
    tools:context="br.com.silver.plock.MainActivity">

    <ProgressBar
        android:id="@+id/send_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_vpn_lock_white_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plock_device"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textColor="@color/actionBarText"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/url_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URL"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/actionBarText"
                android:textStyle="bold"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/command_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <Button
            android:id="@+id/button_action_1"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/action_1"
            android:textStyle="bold"
            android:background="@color/colorButton1"
            android:textColor="@color/actionBarText"/>

        <Button
            android:id="@+id/button_action_2_on"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/action_2_on"
            android:textStyle="bold"
            android:background="@color/colorButton2"
            android:textColor="@color/actionBarText"/>

        <Button
            android:id="@+id/button_action_2_off"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/action_2_off"
            android:textStyle="bold"
            android:background="@color/colorButton3"
            android:textColor="@color/actionBarText"/>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
